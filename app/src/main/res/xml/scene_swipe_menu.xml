<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@id/weatherElapsed"
        app:constraintSetEnd="@id/weatherCollapsed"
        app:duration="300">

        <OnSwipe
            app:onTouchUp="autoComplete"
            app:dragDirection="dragStart"
            app:touchRegionId="@id/openMenuDragView"
            app:touchAnchorId="@id/openMenuDragView"/>

    </Transition>

    <ConstraintSet
        android:id="@+id/weatherElapsed">

        <Constraint
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="10dp"
            app:visibilityMode="ignore"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@+id/menuFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/fragmentContainerCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1"
            app:layout_constraintTop_toTopOf="@id/topCollapsedLine"
            app:layout_constraintBottom_toBottomOf="@id/bottomCollapsedLine"
            app:layout_constraintStart_toStartOf="@id/startCollapsedLine"
            app:layout_constraintEnd_toEndOf="parent">
            <CustomAttribute
                app:attributeName="radius"
                app:customFloatValue="0.0"/>
        </Constraint>

        <Constraint
            android:id="@+id/openMenuDragView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:visibilityMode="ignore"
            app:layout_constraintTop_toBottomOf="@id/menuButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/dragVerticalLine"
            app:layout_constraintBottom_toBottomOf="@id/dragHorizontalLine"/>

        <!-- Guide lines -->
        <Constraint
            android:id="@+id/dragVerticalLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

        <Constraint
            android:id="@+id/dragHorizontalLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75"/>

        <Constraint
            android:id="@+id/topCollapsedLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0"/>

        <Constraint
            android:id="@+id/bottomCollapsedLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="1"/>

        <Constraint
            android:id="@+id/startCollapsedLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0"/>

    </ConstraintSet>


    <ConstraintSet
        android:id="@+id/weatherCollapsed"
        app:deriveConstraintsFrom="@+id/weatherElapsed">

        <Constraint
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="10dp"
            app:visibilityMode="ignore"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@+id/menuFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/fragmentContainerCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.5"
            app:layout_constraintTop_toTopOf="@id/topCollapsedLine"
            app:layout_constraintBottom_toBottomOf="@id/bottomCollapsedLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/startCollapsedLine">
            <CustomAttribute
                app:attributeName="radius"
                app:customFloatValue="100.0"/>
        </Constraint>

        <Constraint
            android:id="@+id/openMenuDragView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:visibilityMode="ignore"
            app:layout_constraintTop_toTopOf="@id/fragmentContainerCard"
            app:layout_constraintBottom_toBottomOf="@id/fragmentContainerCard"
            app:layout_constraintStart_toStartOf="@id/fragmentContainerCard"
            app:layout_constraintEnd_toEndOf="@id/fragmentContainerCard"/>

        <!-- Guide lines -->
        <Constraint
            android:id="@+id/dragVerticalLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

        <Constraint
            android:id="@+id/dragHorizontalLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75"/>

        <Constraint
            android:id="@+id/topCollapsedLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"/>

        <Constraint
            android:id="@+id/bottomCollapsedLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"/>

        <Constraint
            android:id="@+id/startCollapsedLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6"/>

    </ConstraintSet>


</MotionScene>