<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <!--
        <pl.droidsonroids.gif.GifImageView
            android:background="@drawable/andre"
        -->
        <ImageView
            android:id="@+id/weatherBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/winter_night"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/currentWeatherState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Cloudy"
            android:fontFamily="serif"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/currentTemperature"
            app:layout_constraintStart_toStartOf="@id/currentTemperature"
            app:layout_constraintEnd_toEndOf="@id/currentTemperature"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/currentWeatherAnimation"
            android:transitionName="weatherAnimation"
            android:layout_marginTop="10dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:lottie_rawRes="@raw/weather_cloudy_night"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:layout_constraintBottom_toTopOf="@id/weekDays"
            app:layout_constraintTop_toBottomOf="@id/currentTemperature"
            app:layout_constraintStart_toStartOf="@id/currentTemperature"
            app:layout_constraintEnd_toEndOf="@id/currentTemperature"/>

        <TextView
            android:id="@+id/currentTemperature"
            android:transitionName="currentTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17*C"
            android:fontFamily="serif"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            app:layout_constraintTop_toBottomOf="@id/currentWeatherState"
            app:layout_constraintBottom_toTopOf="@+id/currentWeatherAnimation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weekDays"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_day_weather"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

