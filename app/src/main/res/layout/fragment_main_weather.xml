<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main_screen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--<ImageView
        android:id="@+id/weatherBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/spring_night"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>-->

    <ImageView
        android:id="@+id/weatherIndicator"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_rainy"
        app:tint="@color/colorAccent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lviv"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintTop_toTopOf="@+id/weatherIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/weatherState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rainy"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintTop_toBottomOf="@id/cityName"
        app:layout_constraintStart_toStartOf="@id/cityName"/>

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20Â° C"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintTop_toBottomOf="@id/weatherState"
        app:layout_constraintStart_toStartOf="@id/weatherState"/>

    <TextView
        android:id="@+id/todaySectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textSize="22sp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="10dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/temperature"
        app:layout_constraintEnd_toStartOf="@id/tomorrowSectionTitle"
        app:layout_constraintBottom_toTopOf="@id/currentDay"/>

    <TextView
        android:id="@+id/tomorrowSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomorrow"
        android:textSize="22sp"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@id/todaySectionTitle"
        app:layout_constraintStart_toEndOf="@id/todaySectionTitle"
        app:layout_constraintEnd_toStartOf="@id/nextDaysSectionTitle"
        />

    <TextView
        android:id="@+id/nextDaysSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next 7 days"
        android:textSize="22sp"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@id/tomorrowSectionTitle"
        app:layout_constraintStart_toEndOf="@id/tomorrowSectionTitle"
        app:layout_constraintEnd_toEndOf="@id/weatherIndicator"
        />

    <TextView
        android:id="@+id/currentDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/todayForecast"
        app:layout_constraintStart_toStartOf="@id/todaySectionTitle"
        />

    <View
        android:id="@+id/recyclerBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_main_forecast"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintTop_toTopOf="@id/todayForecast"
        app:layout_constraintBottom_toBottomOf="@id/todayForecast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/todayForecast"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/item_forecast_for_time"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!--
        android:background="@drawable/background_main_forecast"

    -->

</androidx.constraintlayout.widget.ConstraintLayout>
